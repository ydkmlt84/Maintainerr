{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Development (Full Stack)",
      "type": "shell",
      "command": "yarn dev",
      "problemMatcher": [],
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "focus": false,
        "echo": true,
        "showReuseMessage": true,
        "clear": false
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Start Server (Backend Only)",
      "type": "shell",
      "command": "yarn workspace @maintainerr/server dev",
      "problemMatcher": [],
